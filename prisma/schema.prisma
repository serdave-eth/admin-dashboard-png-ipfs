generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model content {
  id                    String   @id
  user_wallet_address   String
  filename              String
  file_type             String
  file_size             BigInt
  ipfs_cid              String   @unique
  created_at            DateTime @default(now())
  coin_contract_address String?
  minimum_token_amount  String?

  @@index([created_at])
  @@index([user_wallet_address])
}

model wallet_links {
  id                    String   @id
  user_wallet_address   String   @unique
  zora_account_id       String?
  zora_username         String?
  created_at            DateTime @default(now())
  zora_wallet_address   String?
  linked_at             DateTime @default(now())

  @@index([user_wallet_address])
}
